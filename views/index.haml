!!!
%html
  %head

    %link{:rel => :stylesheet, :href => '/stylesheets/index.css'}
    
    %script{:src => 'http://www.google.com/jsapi'}
    :javascript
      google.load('visualization', '1', {'packages':['table']})
    %script{:src => 'javascripts/jQuery.js'}
    %script{:src => 'javascripts/mustache.js'}
    %script{:src => 'javascripts/index.js'}
    %script{:id => 'template', :type => 'x-tmpl-mustache'}
      %label
        %span {{name}}
        %input{:type => "{{type}}", :id=>"{{id}}", :name=> "{{id}}" }
      
    %title Hello Liz

  %body
    .main
      %h1 Welcome there!
      %form{:method => 'post', :action => ''}
        - columns.each do |column|
          %label
            %span #{column.first}
            - if column.last == 'textarea'
              %textarea{:rows => 4}
            - else
              %input{:type => "#{column.last}",
                     :id => "#{column.first.downcase.gsub(' ','_')}",
                     :name => "#{column.first.downcase.gsub(' ','_')}"}
        %label
          %span &nbsp;
          %input.button{:type => 'submit', :value=> 'Send'}
          %input.button{:type => 'reset', :value=> 'Clear'}
