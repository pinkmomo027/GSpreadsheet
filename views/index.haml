  %body
    .main
      %h1 Welcome there!
      %form{:method => 'post', :action => ''}
        - columns.each do |column|
          %label
            %span #{column}
            %input{:type => 'text', 
                   :id => "#{column.downcase.gsub(' ','_')}",
                   :name => "#{column.downcase.gsub(' ', '_')}"}
        %label
          %span &nbsp;
          %input.button{:type => 'button', :value=> 'Send', :type => 'submit'}
          %input.button{:type => 'button', :value=> 'Clear'}
